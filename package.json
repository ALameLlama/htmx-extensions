{
  "name": "htmx-extensions",
  "scripts": {
    "lint": "eslint src test",
    "format": "eslint --fix src test",
    "test": "mocha-chrome test/index.html"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "camelcase": 0,
      "no-var": 0,
      "no-undef": 0,
      "eqeqeq": 0,
      "no-multi-str": 0,
      "no-prototype-builtins": 0,
      "no-cond-assign": 0,
      "no-empty": 0,
      "no-eval": 0,
      "no-new-func": 0,
      "no-redeclare": 0,
      "no-return-assign": 0,
      "no-unused-vars": 0,
      "no-useless-call": 0,
      "no-useless-escape": 0,
      "no-unused-expressions": 0,
      "space-before-function-paren": [
        "error",
        "never"
      ]
    }
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "chai-dom": "^1.12.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "fs-extra": "^9.1.0",
    "mocha": "10.1.0",
    "mocha-chrome": "https://github.com/Telroshan/mocha-chrome",
    "mocha-webdriver": "^0.3.2",
    "mock-socket": "^9.3.1",
    "sinon": "^9.2.4",
    "uglify-js": "^3.17.4"
  }
}
